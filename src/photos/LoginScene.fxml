<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox alignment="CENTER" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="photos.LoginSceneController">
   <children>
      <VBox alignment="CENTER" prefHeight="267.0" prefWidth="334.0" spacing="20.0">
         <children>
            <Label text="Enter your username for the Photo Library: ">
               <font>
                  <Font name="Apple Braille" size="16.0" />
               </font>
            </Label>
            <TextField fx:id="usernameInput" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="45.0" prefWidth="259.0" promptText="Enter username here">
               <font>
                  <Font size="17.0" />
               </font>
            </TextField>
            <Button mnemonicParsing="false" onAction="#login" prefHeight="39.0" prefWidth="74.0" text="Go">
               <font>
                  <Font size="19.0" />
               </font>
            </Button>
         </children>
      </VBox>
   </children>
</HBox>
